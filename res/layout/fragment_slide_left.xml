<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@+id/desktop_top_layout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/v5_0_1_desktop_list_item"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/headview" 
        android:layout_width="290dp" 
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip">
         
        <ImageView android:id="@+id/desktop_top_avatar" 
            android:layout_width="80.0dip" 
            android:layout_height="80.0dip" 
            android:src="@drawable/avatar_def"
            android:layout_centerHorizontal="true" />
        
        <TextView
            android:id="@+id/desktop_top_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desktop_top_avatar"
            android:layout_marginTop="25dip"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:textSize="16sp"/>


    </RelativeLayout>
    <ListView android:id="@+id/index_left_listview" 
