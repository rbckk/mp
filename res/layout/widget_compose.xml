<?xml version="1.0" encoding="utf-8"?>
	
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/widget" android:focusable="true"
	android:layout_width="320dp" android:layout_height="100dp"
	android:orientation="horizontal"
	android:background="@drawable/m_widget_portrait" 
	style="@style/WidgetBackgroundPortrait">


    <TextView  
        android:id="@+id/message"
        android:layout_width="180dp" 
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="78dp"
        android:padding="10dip"
        android:gravity="left|center_vertical"
        android:text="Landscape"
        android:background="@drawable/w_textbubble"
        />
        
    <ImageView
    	android:id="@+id/wdgt_send"
    	android:src="@drawable/send"
    	android:layout_height="24dp"
    	android:layout_width="24dp"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/message"
    	android:layout_marginLeft="12dp"
    	/>
</RelativeLayout>
