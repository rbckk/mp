<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_notice" android:focusable="true"
	android:layout_width="320px" android:layout_height="100px"
	android:orientation="horizontal" android:background="@drawable/widget_notice">

	<ImageButton android:id="@+id/buttoncompose" 
	android:src="@drawable/postbutton"
		android:layout_alignParentLeft="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerVertical="true"
		android:background="@null" android:layout_marginLeft="10dp" />

	<TextView android:id="@+id/author" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="16dp"
		android:layout_marginLeft="70dp"
		android:text="macno" android:textSize="14sp" android:textColor="#ececec" />

	<TextView android:id="@+id/notice" 
		android:layout_width="200dp"
		android:layout_height="40dp"
		android:layout_marginLeft="70dp"
		android:text="012345678901234567890123456789
        	012345678901234567890123456789
        	012345678901234567890123456789
        	"
		android:layout_below="@id/author" 
		android:textColor="#ececec"
		android:textSize="16sp" android:gravity="top" />
		
	<TextView android:id="@+id/noticetime" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_marginRight="80dp"
		android:text="few seconds ago"
		android:layout_below="@id/notice" 
		android:textColor="#ececec"
		android:textSize="12sp" 
		android:gravity="right" />
		
	<ImageButton android:id="@+id/scrollup" android:src="@drawable/scrollup"
		android:layout_alignParentRight="true" 
		android:layout_alignParentTop="true" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:background="@null"
		android:layout_marginTop="16dp"
		android:layout_marginRight="14dp" />

	<ImageButton android:id="@+id/scrolldown" 
		android:src="@drawable/scrolldown"
		android:layout_alignParentRight="true" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:background="@null"
		android:layout_alignParentBottom="true" 
		android:layout_marginBottom="16dp"
		android:layout_marginRight="14dp" />



</RelativeLayout>