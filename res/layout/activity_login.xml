<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff5f5f5" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    
    <Button 
        android:id="@+id/sso_button"
        android:textColor="#ffaaaaaa"
        android:background="@drawable/dialog_bg"
        android:visibility="gone"
        android:layout_width="80.0dip" 
        android:layout_height="30.0dip"
        android:layout_marginTop="5.0dip"
        android:text="sso" />
    
    <ImageView 
        android:id="@+id/login_image"
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="48.0dip"
        android:src="@drawable/login_top_pic" 
        android:layout_alignParentTop="true" 
        android:layout_centerHorizontal="true" />
        
    <EditText
        android:id="@+id/edit_username"
        android:textSize="16.0sp"
        android:textColorHint="#ffaaaaaa"
        android:background="@drawable/edittext_selecter"
        android:paddingLeft="5.0dip"
        android:paddingTop="24.0dip"
        android:layout_width="210.0dip"
        android:layout_height="50.0dip"
        android:layout_marginTop="10.0dip"
        android:hint="账号" 
        android:singleLine="true" 
        android:layout_below="@id/login_image"
        android:layout_centerHorizontal="true" 
        android:textCursorDrawable="@null" />
              
    <EditText
    	android:id="@+id/edit_password" 
        android:textSize="16.0sp"
        android:textColorHint="#ffaaaaaa" 
        android:background="@drawable/edittext_selecter" 
        android:paddingLeft="5.0dip"
        android:paddingTop="24.0dip" 
        android:layout_width="210.0dip" 
        android:layout_height="50.0dip" 
        android:hint="密码" 
        android:password="true" 
        android:singleLine="true"
        android:selectAllOnFocus="true" 
        android:layout_below="@id/edit_username" 
        android:layout_centerHorizontal="true" 
        android:textCursorDrawable="@null" />
        
    <Button
        android:id="@+id/button_login" 
        android:layout_width="210.0dip" 
        android:layout_height="38.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_below="@id/edit_password" 
        android:layout_centerHorizontal="true"  
        android:gravity="center" 
        android:background="@drawable/login_button"
        />
    
    <TextView
        android:id="@+id/text_login" 
        android:layout_width="210.0dip" 
        android:layout_height="38.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_below="@id/edit_password" 
        android:layout_centerHorizontal="true"  
        android:gravity="center" 
        android:text="登陆"
        android:textColor="#ffffffff" 
        android:textSize="16sp"
        />
        
    <TextView
        android:id="@+id/findpassword"
        android:textSize="12.0sp" 
        android:textColor="#ffaaaaaa" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="12.0dip" 
        android:text="忘记密码?"
        android:layout_below="@id/button_login" 
        android:layout_alignRight="@id/button_login" />
        
    <Button
        android:id="@+id/register"
        android:textSize="16.0sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:background="@drawable/register_button"
        android:layout_width="210.0dip"
        android:layout_height="38.0dip"
        android:layout_marginBottom="32.0dip"
        android:text="register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/text_register" 
        android:textSize="16.0sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_width="210.0dip"
        android:layout_height="38.0dip"
        android:layout_marginBottom="32.0dip"
        android:text="注册"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
